<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhitePage" parent="android:Theme">
        <item name="android:background">#ffffff</item>
        <item name="android:textViewStyle">@style/DarkTextViewStyle</item>
    </style>
    <style name="DarkPage" parent="android:Theme">
        <item name="android:background">@color/bb_darkBackgroundColor</item>
        <item name="android:textViewStyle">@style/DarkTextViewStyle</item>
    </style>

    <style name="DarkTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/bb_darkBackgroundColor</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ClearEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/bb_darkBackgroundColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ClearButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/bb_darkBackgroundColor</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BorderButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
