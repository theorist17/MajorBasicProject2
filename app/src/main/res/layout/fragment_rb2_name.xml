<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.MajorBasicProject2.Business2NameFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="284dp"
            android:layout_height="73dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:text="어떤 사업을 하고 계신가요?"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="사업 활동"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:hint="예) 머니리그/창고A/드론팀플"
            android:id="@+id/etBusinessSignature"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="사업자등록번호 (선택사항)"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etBusinessSignature" />

        <EditText
            android:id="@+id/etBusinessLicense"
            android:layout_width="330dp"
            android:layout_height="42dp"
            android:hint="예) 483-88-00085"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp"
            android:text="사업의 주요 분야"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etBusinessLicense"
            android:layout_marginStart="28dp" />

        <EditText
            android:hint="예) 패스트푸드"
            android:id="@+id/etBusinessField"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="@+id/etBusinessLicense"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-3dp" />

        <Button
            android:text="선택"
            android:id="@+id/btnBusinessField"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/etBusinessField"
            app:layout_constraintTop_toTopOf="@+id/etBusinessField"
            />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp"
            android:text="브랜드 (선택사항)"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etBusinessField"
            android:layout_marginStart="28dp" />

        <EditText
            android:hint="예) 맥도날드"
            android:id="@+id/etBusinessBrand"
            android:layout_width="230dp"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintLeft_toLeftOf="@+id/etBusinessField"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-3dp" />

        <Button
            android:text="선택"
            android:id="@+id/btnBusinessBrand"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/etBusinessBrand"
            app:layout_constraintTop_toTopOf="@+id/etBusinessBrand"
            />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>
