<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.MajorBasicProject2.LoginSignInActivity">

    <EditText
        android:id="@+id/etId"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginTop="98dp"
        android:hint="ID"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPw"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="@+id/etId"
        app:layout_constraintTop_toBottomOf="@+id/etId" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:text="로그인"
        app:layout_constraintLeft_toLeftOf="@+id/com_kakao_login"
        app:layout_constraintTop_toBottomOf="@+id/com_kakao_login" />

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="회원가입"
        app:layout_constraintLeft_toRightOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/com_kakao_login" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/com_kakao_login"
        android:layout_width="220dp"
        android:layout_height="58dp"
        android:layout_marginLeft="-7dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/etPw"
        app:layout_constraintTop_toBottomOf="@+id/etPw" />

</android.support.constraint.ConstraintLayout>
