<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.MajorBasicProject2.RegisterFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="org.androidtown.MajorBasicProject2.RegisterOldActivity">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/topLayout"
                android:layout_width="fill_parent"
                android:layout_height="108dp"
                android:background="@color/bb_darkBackgroundColor"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="297dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:ems="10"
                    android:enabled="false"
                    android:text="의뢰를 요청하는 3단계"
                    android:textSize="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:text="자신의 사업을 소개하세요"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topLayout" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="11dp"
                android:background="@null"
                android:text="업종, 위치, 제공사항에 대한 정보를 작성하세요."
                android:textSize="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

              <Button
                  android:id="@+id/btnRegisterBusiness"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="계속"
                  android:enabled="false"
                  android:background="#383A3F"
                  android:layout_marginTop="8dp"
                  android:layout_marginLeft="30dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView2"
                  app:layout_constraintLeft_toLeftOf="parent"
                  />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:text="요구사항에 대해 설명해 주세요"
                android:textSize="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRegisterBusiness" />

              <TextView
                  android:id="@+id/textView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:text="의뢰내용을 잘 나타내는 사진을 올리고 \n지원자의 흥미를 끌 수 있는 설명을 작성하세요."
                  android:textSize="15dp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginTop="9dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView3"
                  app:layout_constraintLeft_toLeftOf="parent"
                  />

              <Button
                  android:id="@+id/btnRegisterTask"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="30dp"
                  android:layout_marginTop="8dp"
                  android:enabled="false"
                  android:background="#383A3F"
                  android:text="계속"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="32dp"
                  android:background="@null"
                  android:text="지원자를 모집할 준비를 하세요"
                  android:textSize="20dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginLeft="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/btnRegisterTask"
                  app:layout_constraintLeft_toLeftOf="parent"
                  />

              <TextView
                  android:id="@+id/textView6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:text="요금, 달력, 계약 조건을 설정하세요."
                  android:textSize="15dp"
                  android:layout_marginLeft="30dp"
                  android:layout_marginTop="9dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView5"
                  app:layout_constraintLeft_toLeftOf="parent"
                  />

            <Button
                android:id="@+id/btnRegisterRecruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:background="#383A3F"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:text="계속" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="right|bottom"
                android:text="등록하기" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
